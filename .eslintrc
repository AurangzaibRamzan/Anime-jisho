{
  "parser": "babel-eslint",
  "plugins": [
    "react",
    "react-native"
  ],
  "settings": {
    "react": {
      "pragma": "React",
      "version": "16.3.1"
    }
  },
  "env": {
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "airbnb-base",
    "plugin:react-native/all"
  ],
  "rules": {
    "arrow-body-style": 1,
    "react/prop-types": 0,
    "global-require": 0,
    "no-nested-ternary": 0,
    "react/no-deprecated": 0,
    "array-callback-return": 0,
    "no-shadow": 0,
    "import/no-named-as-default": 0,
    "no-console": 0,
    "class-methods-use-this": 0,
    "react-native/no-raw-text": 0
  }
}